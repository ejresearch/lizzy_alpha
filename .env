# LightRAG Configuration for Lizzy Alpha
# ========================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Settings
# For document indexing - use a capable but cost-effective model
LLM_MODEL_NAME=gpt-4o-mini
# For queries - optionally use a more powerful model
QUERY_LLM_MODEL_NAME=gpt-4o

# Embedding Model
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_DIM=1536

# Token Limits
SUMMARY_MAX_TOKENS=30000
MAX_ENTITY_TOKENS=6000
MAX_RELATION_TOKENS=8000
MAX_TOTAL_TOKENS=30000

# Query Settings
TOP_K=60
CHUNK_TOP_K=20

# Storage Configuration
# For local development, using file-based storage
STORAGE_TYPE=local
WORKING_DIR=./lightrag_working_dir

# Optional: Reranker Configuration
# RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# Workspace for data isolation
WORKSPACE=lizzy_alpha

# Logging
LOG_LEVEL=INFO
LOG_FILE=lightrag.log